# Environment
ENV=development

# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_ORG=your-org-name
# GITHUB_REPO=owner/repo  # Alternative to GITHUB_ORG

# Runner Configuration
MIN_RUNNERS=1
MAX_RUNNERS=10
SCALE_UP_THRESHOLD=5
SCALE_DOWN_THRESHOLD=0
CHECK_INTERVAL_SEC=30

# Logging
LOG_LEVEL=info

# Metrics (optional)
METRICS_ENABLED=true
METRICS_PORT=9090

# Provider Configuration
RUNNER_PROVIDER=docker  # docker, aws, gcp, azure
RUNNER_LABELS=self-hosted,linux,x64

# Docker Provider (if using docker)
DOCKER_IMAGE=myoung34/github-runner:latest
DOCKER_NETWORK=bridge

# AWS Provider (if using aws)
AWS_REGION=us-west-2
AWS_INSTANCE_TYPE=t3.medium
AWS_AMI_ID=ami-xxxxx

# Database (optional - for state persistence)
DATABASE_URL=postgresql://user:pass@localhost:5432/runners
