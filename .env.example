# Zeno Environment Variables Example
# Copy this file to .env and fill in your values

# GitHub Configuration
ZENO_GITHUB_TOKEN=ghp_your_github_token_here
ZENO_GITHUB_ORGANIZATION=your-organization
# ZENO_GITHUB_REPOSITORY=owner/repo  # Alternative to organization

# Scaling Configuration
ZENO_SCALING_MIN_RUNNERS=1
ZENO_SCALING_MAX_RUNNERS=10
ZENO_SCALING_SCALE_UP_THRESHOLD=5
ZENO_SCALING_SCALE_DOWN_THRESHOLD=0

# Provider Configuration
ZENO_PROVIDER_TYPE=docker  # Options: docker, ec2

# Docker Provider (if using docker)
ZENO_PROVIDER_DOCKER_HOST=unix:///var/run/docker.sock
ZENO_PROVIDER_DOCKER_IMAGE=myoung34/github-runner:latest

# AWS Provider (if using ec2)
# ZENO_PROVIDER_AWS_REGION=us-east-1
# ZENO_PROVIDER_AWS_INSTANCE_TYPE=t3.medium
# ZENO_PROVIDER_AWS_AMI=ami-0c55b159cbfafe1f0
# ZENO_PROVIDER_AWS_SUBNET_ID=subnet-xxxxx
# ZENO_PROVIDER_AWS_SECURITY_GROUP_IDS=sg-xxxxx
# ZENO_PROVIDER_AWS_USE_SPOT=true

# Server Configuration
ZENO_SERVER_PORT=8080
ZENO_SERVER_ENABLE_AUTH=false
# ZENO_SERVER_API_KEY=your-secret-api-key

# Observability
ZENO_OBSERVABILITY_ENABLE_METRICS=true

# Leader Election (for HA)
ZENO_LEADER_ELECTION_ENABLED=false

# General
ZENO_DRY_RUN=false
ZENO_LOG_LEVEL=info
